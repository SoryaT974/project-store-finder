    {{ form_start(registrationForm, { 'attr': { 'class': 'form-register' }}) }}
        
            {{ form_label(registrationForm.userName, 'Nom d\'utilisateur', {'label_attr': {'class': 'label-form-register'}} )}}
            {{ form_widget(registrationForm.userName, {'attr': {'class': 'input-form-register'}}) }}
        
        {{ form_errors(registrationForm.userName) }}
        
            {{ form_label(registrationForm.lastName, 'Nom de famille', {'label_attr': {'class': 'label-form-register'}} )}}
            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'input-form-register'}}) }}
        
