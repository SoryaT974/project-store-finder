{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <main>
        <h1 class="title-login">Connectez-vous</h1>
            <div class="info-registration">
                <p>
                    Si vous n'avez pas encore de compte, vous pouvez vous inscrire sur le lien suivant : <a class="link-register" href="{{ path('app_register') }}">Inscrivez-vous</a>
                </p>
            </div>
        <h2 class="title-form-login">Formulaire de connexion</h2>
        <form class="form-login" action="{{ path('app_login') }}" method="post">
            <label class="label-form-login" for="username">Nom d'utilisateur :</label>
            <input class="input-form-login" type="text" id="username" name="_username" value="{{ last_username }}"/>

            <label class="label-form-login" for="password">Mot de passe :</label>
            <input class="input-form-login" type="password" id="password" name="_password"/>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <button class="submit-form-login" type="submit">Se connecter</button>
            <div class="forgot-password">
                <a class="link-reset-password" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            </div>
        </form>
    </main>
{% endblock %}