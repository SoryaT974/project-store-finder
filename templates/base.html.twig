<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="css/style.css">
        <script src="https://kit.fontawesome.com/b7fb4b74ca.js" crossorigin="anonymous"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header-container">
            <div class="header">
                <div class="header-logo">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('images/logo-white.png') }}" alt="logo reptiles stores finder">
                    </a>
                </div>
                <nav id="header-nav" class="header-nav">
                    <ul class="header-nav-list">
                        <li>
                            <a href="{{ path('home') }}">
                                Accueil
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('about') }}">
                                A propos
                            </a>
                        </li>
                        <li>
                            <a href="">
                            <span class="icon person">
                                <i class="fa-solid fa-user"></i>
                            </span>
                                Connexion
                            </a>
                        </li>
                        <li>
                            <a href="">
                            <span class="icon heart">
                                <i class="fa-solid fa-heart"></i>
                            </span>
                                Mes selections
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
        {% block body %}{% endblock %}
        <footer class="footer-container">
            <div class="footer">
                <div class="footer-logo">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('images/logo-green.png') }}" alt="logo reptiles stores finder">
                    </a>
                </div>
                <div class="footer-content">
                    <div class="footer-contact">
                        <h3 class="title-footer">Me contacter</h3>
                            <address>
                                <a href="mailto:claire@helloworld.com"><i class="fa-solid fa-envelope icons-footer"></i>projet@mail.com</a><br>
                                <a href="tel:+33601030507"><i class="fa-solid fa-phone icons-footer"></i>06 00 00 00 00</a>
                            </address>
                    </div>
                    <div class="footer-social-network">
                        <h3 class="title-footer">Suivez-moi sur :</h3>
                        <div class="footer-icons">
                                <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-square icons-social-network"></i></a>
                                <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter-square icons-social-network"></i></a>
                                <a href="https://www.pinterest.fr/" target="_blank"><i class="fab fa-pinterest icons-social-network"></i></a>
                                <a href="https://www.instagram.com/?hl=fr" target="_blank"><i class="fab fa-instagram icons-social-network"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
